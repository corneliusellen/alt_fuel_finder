<h2>Stations:</h2>
<% @stations.each do |station| %>
  <div class="station">
    <div class="name">
      <%= station.name %>
    </div>
    <div class="address">
      <%= station.address %>
    </div>
    <div class="fuel-type">
      <%= station.fuel_type %>
    </div>
    <div class="distance">
      <%= station.distance %>
    </div>
    <div class="access-times">
      <%= station.access_times %>
    </div>
  </div>
<% end %>
